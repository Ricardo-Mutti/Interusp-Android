<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="75dp"
    android:gravity="center"
    android:orientation="vertical">

    <TextView
        android:id="@+id/jogos_informacoes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Quinta-feira - 27/05 - 8:00 - G1"
        android:textColor="@color/azul_tema" />

    <TextView
        android:id="@+id/jogos_competidores"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="POLI X FEA"
        android:textStyle="bold"
        android:textSize="18sp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:textColor="@color/azul_tema" />

    <TextView
        android:id="@+id/jogos_nome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Futebol de Campo - Quartas de Final"
        android:textColor="@color/azul_tema" />


</LinearLayout>