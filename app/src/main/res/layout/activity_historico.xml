<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Mais.Historico">

    <include layout="@layout/action_bar"
        android:id="@+id/action_bar"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Histórico"
        android:id="@+id/tvHistorico"
        android:textSize="30dp"
        android:padding="5dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/action_bar"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Escolha a modalidade"
        android:id="@+id/tvEscolhaModalidade"
        android:padding="5dp"
        android:layout_below="@+id/tvHistorico"
        android:layout_centerHorizontal="true" />

    <ListView android:id="@+id/modalidadeTextView"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@+id/tvEscolhaModalidade"
        android:clickable="true"
        android:layout_above="@+id/btCampeoes"
        android:padding="10dp"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Campeões Gerais por Ano"
        android:id="@+id/btCampeoes"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/modalidadeTextView"
        android:layout_alignEnd="@+id/modalidadeTextView" />


</RelativeLayout>
