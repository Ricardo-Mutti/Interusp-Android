<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="35dp"
        android:layout_marginRight="35dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_weight="2"
            android:paddingBottom="5dp"
            android:text="Modalidades"
            android:textSize="20dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/atletismo_feminino"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:src="@drawable/modalidade_atletismo_fem"
                android:layout_weight="1" />

            <ImageView
                android:id="@+id/atletismo"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/modalidade_atletismo" />

            <ImageView
                android:id="@+id/basquete_feminino"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:src="@drawable/modalidade_basquete_fem"
                android:layout_weight="1" />

            <ImageView
                android:id="@+id/basquete"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/modalidade_basquete" />

            <ImageView
                android:id="@+id/softbol"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:src="@drawable/modalidade_soft"
                android:layout_weight="1" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/beisebol"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/modalidade_beisebol" />

            <ImageView
                android:id="@+id/campo"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/modalidade_campo" />

            <ImageView
                android:id="@+id/futsal_feminino"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:src="@drawable/modalidade_futsal_fem"
                android:layout_weight="1" />

            <ImageView
                android:id="@+id/futsal"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/modalidade_futsal" />

            <ImageView
                android:id="@+id/handebol_feminino"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:src="@drawable/modalidade_handball_fem"
                android:layout_weight="1" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/handebol"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/modalidade_handball" />

            <ImageView
                android:id="@+id/judo"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/modalidade_judo" />

            <ImageView
                android:id="@+id/karate"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/modalidade_karate" />

            <ImageView
                android:id="@+id/natacao_feminino"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:src="@drawable/modalidade_natacao_fem"
                android:layout_weight="1" />

            <ImageView
                android:id="@+id/natacao"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/modalidade_natacao" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_weight="2">

            <ImageView
                android:id="@+id/polo"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/modalidade_polo" />

            <ImageView
                android:id="@+id/rugby_feminino"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:src="@drawable/modalidade_rugby_fem"
                android:layout_weight="1" />

            <ImageView
                android:id="@+id/rugby"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:src="@drawable/modalidade_rugby"
                android:layout_weight="1" />

            <ImageView
                android:id="@+id/tenis_feminino"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:src="@drawable/modalidade_tenis_fem"
                android:layout_weight="1" />

            <ImageView
                android:id="@+id/tenis"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/modalidade_tenis" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_weight="2">

            <ImageView
                android:id="@+id/tenis_mesa_feminino"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:src="@drawable/modalidade_tenismesa_fem"
                android:layout_weight="1" />

            <ImageView
                android:id="@+id/tenis_mesa"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/modalidade_tenismesa" />

            <ImageView
                android:id="@+id/volei_feminino"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:src="@drawable/modalidade_volei_fem"
                android:layout_weight="1" />

            <ImageView
                android:id="@+id/volei"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/modalidade_volei" />

            <ImageView
                android:id="@+id/xadrez"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/modalidade_xadrez" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
